<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".activity.registerActivity">

    <LinearLayout
        android:id="@+id/rg_pot"
        android:layout_width="83dp"
        android:layout_height="90dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/small_pot" />
    </LinearLayout>

    <TextView
        android:id="@+id/rg_toptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="19dp"
        android:layout_marginTop="20dp"
        android:text="따뜻한 화분"
        android:textColor="#ffffff"
        android:textSize="27sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="우울증 예방 솔루션"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/rg_toptext"
        app:layout_constraintTop_toBottomOf="@id/rg_toptext"

        />
    />

    <ImageView
        android:id="@+id/rg_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_rg_rec"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_pot" />

    <TextView
        android:id="@+id/rg_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_box"
        app:layout_constraintTop_toTopOf="@+id/rg_box" />

    <TextView
        android:id="@+id/rg_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:text="사용자 이름"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t1"

        />

    <TextView
        android:id="@+id/rg_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="16dp"
        android:text="성별"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t1"

        />

    <EditText
        android:id="@+id/rg_input_name"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:hint="김화분"
        android:textColor="#242424"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/rg_rine1"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintRight_toRightOf="@id/rg_rine1"
        app:layout_constraintTop_toBottomOf="@id/rg_t2" />


    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:orientation="horizontal"

        android:textColor="#242424"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintRight_toRightOf="@id/rg_rine2"
        app:layout_constraintTop_toBottomOf="@id/rg_t3">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:checked="true"
            android:text="남자" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여자" />

    </RadioGroup>

    <ImageView
        android:id="@+id/rg_rine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rg_rine"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_input_name"
        app:layout_constraintTop_toTopOf="@id/rg_rine2" />

    <ImageView
        android:id="@+id/rg_rine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_rg_rine"
        app:layout_constraintLeft_toRightOf="@id/rg_rine1"
        app:layout_constraintTop_toBottomOf="@id/radiogroup"

        />

    <TextView
        android:id="@+id/rg_t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:inputType="number"
        android:text="생년월일"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_rine2" />

    <EditText
        android:id="@+id/rg_input_birth"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:hint="20020101"
        android:textColor="#242424"
        android:textSize="18sp"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintRight_toRightOf="@id/rg_longline1"
        app:layout_constraintTop_toBottomOf="@id/rg_t4" />

    <ImageView
        android:id="@+id/rg_longline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_login_line"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_input_birth" />

    <TextView
        android:id="@+id/rg_t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="아이디"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_longline1"

        />

    <EditText
        android:id="@+id/rg_input_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="warmplant"
        android:textColor="#242424"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintRight_toRightOf="@id/rg_longline2"
        app:layout_constraintTop_toBottomOf="@id/rg_t5" />

    <ImageView
        android:id="@+id/rg_longline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_rg_longline"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_input_id" />

    <TextView
        android:id="@+id/rg_t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="비밀번호"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_longline2"

        />

    <EditText
        android:id="@+id/rg_input_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="***********"
        android:inputType="textPassword"
        android:textColor="#242424"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintRight_toRightOf="@id/rg_longline3"
        app:layout_constraintTop_toBottomOf="@id/rg_t6" />

    <ImageView
        android:id="@+id/rg_longline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        android:src="@drawable/ic_rg_longline"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_input_pw" />

    <TextView
        android:id="@+id/rg_t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:text="비밀번호 확인"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_longline3"

        />

    <EditText
        android:id="@+id/rg_input_pwcheck"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="***********"
        android:inputType="textPassword"
        android:textColor="#242424"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintRight_toRightOf="@id/rg_longline3"
        app:layout_constraintTop_toBottomOf="@id/rg_t7" />

    <ImageView
        android:id="@+id/rg_longline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_rg_longline"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_input_pwcheck" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="@drawable/ic_rg_btn"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_longline4" />


</android.support.constraint.ConstraintLayout>