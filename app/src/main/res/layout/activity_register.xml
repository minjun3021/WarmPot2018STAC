<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".register">

    <LinearLayout
        android:id="@+id/rg_pot"
        android:layout_width="83dp"
        android:layout_height="90dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/small_pot" />
    </LinearLayout>

    <ImageView
        android:id="@+id/rg_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_rg_rec"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_pot" />

    <TextView
        android:id="@+id/rg_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_box"
        app:layout_constraintTop_toTopOf="@+id/rg_box" />

    <TextView
        android:id="@+id/rg_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="사용자 이름"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t1"

        />

    <TextView
        android:id="@+id/rg_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="16dp"
        android:text="성별"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t1"

        />

    <EditText
        android:id="@+id/rg_input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="김화분"
        android:textColor="#242424"
        android:textSize="18sp"

        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t2" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:text="남자"
        android:textColor="#242424"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t3" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rg_rine"
            android:id="@+id/rg_rine1"
            app:layout_constraintLeft_toLeftOf="@id/rg_t1"
            app:layout_constraintTop_toBottomOf="@id/rg_input_name"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rg_rine"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@id/rg_rine1"
        app:layout_constraintTop_toBottomOf="@id/spinner1"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#b9b9b9"
        android:id="@+id/rg_t4"
        android:text="생년월일"
        android:layout_marginTop="11dp"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_input_name"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#242424"
        android:layout_marginTop="4dp"
        tools:text="2002년 11월 06일"
        android:id="@+id/rg_input_birth"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t4"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_login_line"
        android:id="@+id/rg_longline1"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/rg_input_birth"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#b9b9b9"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_longline1"
        android:text="아이디"
        android:id="@+id/rg_t5"
        android:layout_marginTop="12dp"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#242424"
        android:background="@null"
        android:id="@+id/rg_input_id"
        android:text="warmplant"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t5"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        android:id="@+id/rg_longline2"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/rg_input_id"
        android:src="@drawable/ic_rg_longline"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#b9b9b9"
        android:text="비밀번호"
        android:id="@+id/rg_t6"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/rg_longline2"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/rg_input_pw"
        android:textColor="#242424"
        android:hint="***********"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t6"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        android:id="@+id/rg_longline3"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/rg_input_pw"
        android:src="@drawable/ic_rg_longline"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#b9b9b9"
        android:text="비밀번호 확인"
        android:id="@+id/rg_t7"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/rg_longline3"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/rg_input_pwcheck"
        android:textColor="#242424"
        android:hint="***********"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        app:layout_constraintTop_toBottomOf="@id/rg_t7"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/rg_t1"
        android:id="@+id/rg_longline4"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/rg_input_pwcheck"
        android:src="@drawable/ic_rg_longline"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="34dp"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="18sp"

        app:layout_constraintTop_toBottomOf="@id/rg_longline4"
        android:background="@drawable/ic_rg_btn"/>
</android.support.constraint.ConstraintLayout>