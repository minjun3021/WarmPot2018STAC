<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".Login">

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="141dp"
        android:layout_height="152dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="62dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/pot" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_text1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="따듯한 화분"
        android:textColor="#ffffff"
        android:textSize="33sp"
        app:layout_constraintBottom_toTopOf="@+id/login_text2"
        app:layout_constraintStart_toEndOf="@+id/login_layout"
        app:layout_constraintTop_toTopOf="@+id/login_layout"

        />

    <TextView
        android:id="@+id/login_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="우울증 예방 솔루션"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/login_layout"
        app:layout_constraintTop_toBottomOf="@+id/login_text1" />

    <ImageView
        android:id="@+id/rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rogin_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/login_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="로그인"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/login_t2"
        app:layout_constraintLeft_toLeftOf="@+id/rec"
        app:layout_constraintTop_toTopOf="@+id/rec"

        />

    <TextView
        android:id="@+id/login_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="사용자 아이디"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/login_id"
        app:layout_constraintLeft_toLeftOf="@+id/login_t1"
        app:layout_constraintTop_toBottomOf="@+id/login_t1" />

    <EditText
        android:id="@+id/login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:hint="minjun3021"
        android:textColor="#242424"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/login_line"
        app:layout_constraintLeft_toLeftOf="@+id/login_t1"
        app:layout_constraintTop_toBottomOf="@+id/login_t2" />

    <ImageView
        android:id="@+id/login_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_login_line"
        app:layout_constraintBottom_toTopOf="@+id/login_t3"
        app:layout_constraintLeft_toLeftOf="@+id/login_t1"
        app:layout_constraintTop_toBottomOf="@+id/login_id" />

    <TextView
        android:id="@+id/login_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="비밀번호"
        android:textColor="#b9b9b9"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/login_pw"
        app:layout_constraintLeft_toLeftOf="@+id/login_t1"
        app:layout_constraintTop_toBottomOf="@+id/login_line"

        />

    <EditText
        android:id="@+id/login_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@null"
        android:hint="*************"
        android:textColor="#242424"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/login_t4"
        app:layout_constraintLeft_toLeftOf="@+id/login_t1"
        app:layout_constraintTop_toBottomOf="@+id/login_t3"

        />

    <TextView
        android:id="@+id/login_t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="계정이 없으신가요?"
        android:textColor="#b9b9b9"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login_btn"
        app:layout_constraintTop_toBottomOf="@+id/login_pw" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_login_btn"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:id="@+id/login_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_t4" />
</android.support.constraint.ConstraintLayout>