<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".Login">

    <ImageView
        android:id="@+id/login_pot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="62dp"
        android:paddingBottom="28.5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="28.5dp"
        android:src="@drawable/pot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="따뜻한 화분"
        android:textColor="#fff"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/login_pot"
        app:layout_constraintTop_toTopOf="@id/login_pot" />

    <TextView
        android:id="@+id/login_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="우울증 예방 솔루션"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/login_pot"
        app:layout_constraintTop_toBottomOf="@+id/login_t1" />

    <ImageView
        android:id="@+id/login_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_login_rectangel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent" />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@id/login_btn"
        app:layout_constraintRight_toRightOf="@id/login_btn"
        android:id="@+id/login_id"
        app:layout_constraintBottom_toTopOf="@id/login_t5"
        android:textColor="#242424"
        android:hint="warmplant"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/login_t4"
        app:layout_constraintLeft_toLeftOf="@id/login_btn"
        android:id="@+id/login_t3"
        android:text="로그인"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#b9b9b9"
        android:text="사용자 아이디"
        android:id="@+id/login_t4"
        app:layout_constraintLeft_toLeftOf="@id/login_btn"
        app:layout_constraintBottom_toTopOf="@id/login_id"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/login_t5"
        android:textColor="#b9b9b9"
        android:text="비밀번호"
        app:layout_constraintBottom_toTopOf="@id/login_pw"
        app:layout_constraintLeft_toLeftOf="@id/login_btn"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/login_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:hint="*************"
        android:inputType="textPassword"
        android:textColor="#242424"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/login_t6"
        app:layout_constraintLeft_toLeftOf="@id/login_btn"
        app:layout_constraintRight_toRightOf="@id/login_btn" />

    <TextView
        android:id="@+id/login_t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="계정이 없으신가요?"
        android:textColor="#b9b9b9"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/login_btn"
        app:layout_constraintLeft_toLeftOf="@id/login_rec"
        app:layout_constraintRight_toRightOf="@id/login_rec" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ic_login_btn"
        android:text="로그인"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/login_rec"
        app:layout_constraintRight_toRightOf="@id/login_rec" />
</android.support.constraint.ConstraintLayout>